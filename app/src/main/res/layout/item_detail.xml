<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/detailview">

    <TextView
            android:text="kor"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:id="@+id/textDetailKor"
            android:height="50dp"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="124dp"
            android:layout_marginStart="60dp"
            android:autoSizeTextType="uniform"
            android:gravity="center_horizontal"
            android:textStyle="bold"
    />
    <TextView
            android:text="eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDetailEng"
            android:height="25dp"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.287"/>
    <Button
            android:text="체결"
            android:backgroundTint="@android:color/holo_red_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDetailBuy"
            android:width="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.183"
            android:layout_marginBottom="100dp"/>
    <Button
            android:text="취소"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:id="@+id/BtnDetailCancle"
            android:backgroundTint="@android:color/holo_blue_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.808" android:textColor="#212121"/>

    <TextView
            android:text="현재 가격 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDetailNow"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.687"/>
    <TextView
            android:text="xxxx.xxbit"
            android:height="50dp"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:id="@+id/textDetailNowPrice"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="200dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.644"/>
    <TextView
            android:text="total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/totalbit"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.522"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="164dp"/>
    <TextView
            android:text="최고가"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.135"
            app:layout_constraintVertical_bias="0.381"
            android:id="@+id/textView12"
            android:textSize="15dp"
    />
    <TextView
            android:text="최저가"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@android:color/holo_blue_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/textView12"
            app:layout_constraintStart_toEndOf="@+id/textView12" app:layout_constraintHorizontal_bias="0.498"
            android:id="@+id/textView13"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lowPrice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/highPrice"
            android:textSize="20dp"
            android:textColor="@android:color/holo_blue_light"
            app:layout_constraintStart_toEndOf="@+id/highPrice" app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/highPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.151"
            android:textSize="20dp"
            android:textColor="@android:color/holo_red_light"
            app:layout_constraintTop_toBottomOf="@+id/textView12" android:layout_marginTop="12dp"/>
    <Button
            android:text="-"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/decreasecount"
            app:layout_constraintEnd_toStartOf="@+id/viewcount"
            app:layout_constraintTop_toBottomOf="@+id/highPrice" android:layout_marginTop="48dp"/>
    <Button
            android:text="+"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/increasecount"
            app:layout_constraintStart_toEndOf="@+id/viewcount"
            app:layout_constraintTop_toBottomOf="@+id/lowPrice"
            android:layout_marginTop="48dp"/>
    <TextView
            android:text="0"
            android:textAlignment="center"
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/viewcount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/highPrice"/>
    <TextView
            android:text="수 량"
            android:textSize="25dp"
            android:layout_width="60dp"
            android:layout_height="37dp"
            android:id="@+id/textView7"
            app:layout_constraintEnd_toStartOf="@+id/decreasecount"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/highPrice"/>
    <TextView
            android:text="합산 가격 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textDetailNow"
            android:layout_marginTop="16dp"
            android:layout_marginStart="48dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>